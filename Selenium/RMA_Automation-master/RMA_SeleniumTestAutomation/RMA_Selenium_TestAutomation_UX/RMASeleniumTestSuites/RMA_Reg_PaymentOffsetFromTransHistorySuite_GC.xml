<suite name="RMA_SampleSuite" parallel="none" allow-return-values="true">

	<!--To Set The Executed SuiteName -->
	<parameter name="ExecutedSuiteName" value="RMA_Reg_PaymentOffsetFromTransHistorySuite_GC.xml" />
	
	<parameter name="DataSourceRow" value="1" /><!--To Set The Datasource 
		Row Name From The sheet RMA_TC_002 of File RMASeleniumAutomationTestData -->
	

	<!--Verify That RMA Application Is Logged In -->
	<test name="RMA_TC_001">
		<classes>
			<class name="rmaseleniumtestscripts.RMA_TC_001" />
		</classes>
	</test>

	<!--Verify That Required DSN Is Selected In RMA Application -->
	<test name="RMA_TC_002">
		<parameter name="ZoneName" value="Claims" />
		<classes>
			<class name="rmaseleniumtestscripts.RMA_TC_002" />
		</classes>
	</test>
	
	<!--Successful Corporate General Claim Creation On Providing Mandatory Data,Existence of Necessary Tabs With Edit Of One Text Field In Each, Edit Of Created Claim Is Validated -->
		 <test name="RMA_Smoke_TC_002_GC">
		<classes>
			<class name="rmaseleniumtestscripts.RMA_Smoke_TC_002_GC" />
		</classes>
	</test>

	<!-- Verify User Can Offset A Payment In Released Status From Transaction History Screen Is Validated -->
	<test name="RMA_Reg_PaymentOffset_TC_001">
		<classes>
			<class name="rmaseleniumtestscripts.RMA_Reg_PaymentOffset_TC_001" />
		</classes>
	</test>
	
	<!-- Verify User Can Offset A Printed Payment From Transaction History Screen Is Validated -->
	<test name="RMA_Reg_PaymentOffset_TC_002">
		<classes>
			<class name="rmaseleniumtestscripts.RMA_Reg_PaymentOffset_TC_002" />
		</classes>
	</test>	
	
	<!-- Verify User Can Not Offset A Void Payment From Transaction History Screen Is Validated -->
	<test name="RMA_Reg_PaymentOffset_TC_003">
		<classes>
			<class name="rmaseleniumtestscripts.RMA_Reg_PaymentOffset_TC_003" />
		</classes>
	</test>
	
	<!-- Verify User Can Not Offset A Collection From Transaction History Screen For Corporate Claim Is Validated -->
	<test name="RMA_Reg_PaymentOffset_TC_004">
		<classes>
			<class name="rmaseleniumtestscripts.RMA_Reg_PaymentOffset_TC_004" />
		</classes>
	</test>
	
	<!-- Verify User Can Not Offset A Negative Payment From Transaction History Screen Is Validated -->
	<test name="RMA_Reg_PaymentOffset_TC_005">
		<classes>
			<class name="rmaseleniumtestscripts.RMA_Reg_PaymentOffset_TC_005" />
		</classes>
	</test>
	
	<!-- Verify User Can Not Apply Payment Offset On Transaction History Screen If Allow Payment Offset Setting Is OFF In SMS -->
	<test name="RMA_Reg_PaymentOffset_TC_006">
		<classes>
			<class name="rmaseleniumtestscripts.RMA_Reg_PaymentOffset_TC_006" />
		</classes>
	</test>
	
	<!-- Verify On Offset A Payment Of Closed Claim From Transaction History Is Only Setting Offset Flag But Not Updating The Reserves -->
	<test name="RMA_Reg_PaymentOffset_TC_007">
		<classes>
			<class name="rmaseleniumtestscripts.RMA_Reg_PaymentOffset_TC_007" />
		</classes>
	</test>
	
<!-- Logout From Application At end -->
	<test name="RMA_Reg_Logout">
		<classes>
			<class name="rmaseleniumtestscripts.RMA_Reg_Logout" />
		</classes>
	</test>
	</suite>